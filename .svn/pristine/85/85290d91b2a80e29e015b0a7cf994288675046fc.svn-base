header{
    background-color: #f0f0f0;
    width: 100%;
    height: 195px;
}
.main{
    width: 100%;
}
.main .search{
    margin:0 auto;
    width: 100%;
    max-width: 800px;
}
.main .search .search-type{

}
.main .search .search-type .type-baidu,.main .search .search-type .type-google{
    background-color: #D0D0D0;
    width: 60px;
    color: #6F6F6F;
    text-align: center;
    line-height: 40px;
    float: left;
}
.main .search .search-type .type-google{
    background-color: #e6e6e6;
}
.main .search .search-type .selected{
    background-color: #676767;
    color: #ffffff;
}
.main .search .search-input{
    box-sizing: border-box;
    padding: 2px 2px 2px 6px;
    max-width: 800px;
    width: 80%;
    height: 40px;
    font-size: 17px;
    border-color: #e6e6e6;
    border-top: none;
    outline: none;
    float: left;
}
.main .search .search-btn{
    background-color: #e6e6e6;
    width: 20%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    cursor: pointer;
    float: right;
}
.main .search .search-btn:hover{
    background-color: #D0D0D0;
    color: #ffffff;
}